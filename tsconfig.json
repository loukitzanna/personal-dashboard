{
    "compilerOptions": {
        "baseUrl": "./src",
        "jsx": "react",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "paths": {
            "~*": [
                "./*"
            ],
            "@/*": [
                "./src/*"
            ]
        },
        "strict": true,
        "target": "ES2020",
        "esModuleInterop": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "typeRoots": ["./node_modules/@types", "./src/types", "./src/bff/types"]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}